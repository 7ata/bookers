<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book do |f| %>
    <div>
        <%= f.label :Title %><br>
        <%= f.text_field :title, autofocus: true, :placeholder =>"#{@book.title}" %>
    </div>
    <div>
        <%= f.label :Body %><br>
        <%= f.text_area :body, :placeholder =>"#{@book.body}" %>
    </div>
    <div><%= f.submit "Update Book" %></div>
<% end %>

<%=link_to "Show" ,"/books/#{@book.id}" %>
<%=link_to "Back" ,"/books" %>

