<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
    <div>
        <%= f.label :Title %><br>
        <%= f.text_field :title, autofocus: true, :placeholder =>"#{@book.title}" %>
    </div>
    <div>
        <%= f.label :Body %><br>
        <%= f.text_area :body, :placeholder =>"#{@book.body}" %>
    </div>
    <div><%= f.submit "Update Book" %></div>
<% end %>

<%=link_to "Show" ,"/books/#{@book.id}" %>
<%=link_to "Back" ,"/books" %>

